public void testreader() throws IOException {
        FileReader fr = null;
        try {
            File file = new File("helloworld");
            System.out.println(file.getAbsolutePath());
            fr = new FileReader(file);
            int data ;
            while ((data= fr.read()) != -1) {
                System.out.print((char) data);
            }
        } catch (IOException e) {
            e.printStackTrace();
        } finally {
            try {
                if (fr != null)
                    fr.close();
            } catch (IOException e) {
                e.printStackTrace();
            }
        }
    }
